{# Card #}

{% if mov.title %}
    {% set name = mov.title|slugify %}
{% elseif mov.original_title %}
    {% set name = mov.original_title|slugify %}
{% else %}
    {% set name = '#' %}
{% endif %}

<div class="col-sm-12 col-md-6 col-lg-4">
    <a href="{{ BaseUrl }}/movie/{{ name }}">
        <div class="card text-center p-0 my-2 mx-auto rounded shadow" id="{{ mov.id }}">

            {% if mov.poster_path %}
                <img class="card-img img-fluid w-100 p-0 m-auto" src="https://image.tmdb.org/t/p/w300{{ mov.poster_path }}" alt="Image">
            {% else %}
                <img class="card-img img-fluid w-100 p-0 m-auto" src="holder.js/300x450/?random=yes&text={{ mov.title }}" width="100%" height="100%" alt="Image">
            {% endif %}

            <div class="card-img-overlay">
                <div class="card-body">
                    <p class="card-text"></p>
                </div>
            </div>

        </div>
    </a>
</div>
