{# Register #}

{% extends "templates/app.twig" %}

{% block title %}Register an account!{% endblock %}

{% block content %}

    <div class="container" id="register">
        <div class="row w-100 p-0 m-auto justify-content-center">
            <div class="col-12 text-center">

                <p class="h3 font-weight-bold">Register Account</p>

            </div>
        </div>

        <div class="row w-100 p-0 m-auto justify-content-center">
            <div class="col-xs-12 col-sm-10 col-md-8 col-lg-6 p-3 m-auto bg-dark text-white rounded shadow">

                <form action="/register" method="post">

                    <div class="form-group font-weight-bold">
                        <label>Name</label>
                        <input name="name" class="form-control" placeholder="Your Name" type="text" autocomplete="off">
                    </div>

                    <div class="form-group font-weight-bold">
                        <label>Email</label>
                        <input name="email" class="form-control" placeholder="your@email.com" type="email">
                    </div>

                    <div class="form-group font-weight-bold">
                        <label>Password</label>
                        <input name="password" class="form-control" placeholder="Password" type="password">
                    </div>

                    <div class="form-group">
                        {{ csrf }}
                    </div>

                    <div class="form-group w-100 p-0 m-auto text-center justify-content-center">
                        <button type="submit" class="btn btn-lg btn-primary font-weight-bold">Register!</button>
                    </div>

                </form>

            </div>
        </div>
    </div>

{% endblock %}